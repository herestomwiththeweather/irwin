<h2 class="my-3 text-2xl text-gray-700 font-bold">Authenticate</h2>
<div>
  The app <a href="<%= session[:client_id] %>"><%= session[:client_id] %></a> has requested the following scopes: <%= params[:scope] %>
</div>
<div>
<%= form_tag authorizations_path, data: {turbo: false} do %>
  <div style="width: 500px; height: 40px;">
    <button style="float: right" class="py-1 px-2 bg-blue-600 border-2 border-blue-700 hover:bg-blue-100 hover:text-blue-600 rounded-lg my-3 text-blue-100 transition-colors duration-300"><%= submit_tag 'Approve' %></button>
  </div>
<% end %>
