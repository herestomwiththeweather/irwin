<%= turbo_frame_tag(dom_id follow_notification) do %>
  <div><%= image_tag follow_notification.account.icon_url_or_default, style: 'display: inline; padding: 2px; max-width: 50px; max-height: 50px;' %><b><%= link_to follow_notification.account.name, follow_notification.account, data: {'turbo-frame': '_top'} %></b> followed you <%= time_ago_in_words(follow_notification.created_at) %> ago</div>
<% end %>
