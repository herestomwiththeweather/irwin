<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @rule %>

    <%= link_to "Edit this rule", edit_admin_rule_path(@rule), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to rules", admin_rules_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this rule", [:admin, @rule], method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
