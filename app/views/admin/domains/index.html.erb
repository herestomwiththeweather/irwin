<div class="mt-4 px-5">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Domains</h1>
  </div>

  <table class="min-w-full mt-4">
    <thead>
      <tr class="border-b">
        <th class="text-left py-2">Domain</th>
        <th class="text-right py-2">Accounts</th>
      </tr>
    </thead>
    <tbody>
      <% @domains.each do |d| %>
        <tr class="border-b hover:bg-gray-50">
          <td class="py-2">
            <%= link_to d[:domain], admin_domain_path(d[:domain]) %>
          </td>
          <td class="text-right py-2">
            <%= d[:account_count] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @domains %>
</div>
