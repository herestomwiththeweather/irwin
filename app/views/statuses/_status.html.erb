<%= turbo_frame_tag(dom_id status) do %>
  <% if status.thread.present? %>
    <%= link_to "replying to", status_path(status.thread) %> <%= status.thread.account.webfinger_to_s %>
  <% end %>
  <div><%= image_tag status.account.icon_url_or_default, style: 'display: inline; padding: 2px; max-width: 50px; max-height: 50px;' %><b><%= link_to status.account.name, status.account %></b> posted <%= link_to("#{ time_ago_in_words(status.created_at) } ago", status_path(status) ) %></div>
  <p class="text-gray-800">
    <%= sanitize status.text, tags: %w(b i u p a) %>
  </p>
  <% if status.account != current_user.account %>
    <% if like = Like.find_by(status: status, account: current_user.account) %>
      <%= button_to('Unlike', like_path(like), method: 'delete', style: 'text-decoration: underline') %>
    <% else %>
      <%= button_to('Like', likes_path(status_id: status.id), method: 'post', style: 'text-decoration: underline') %>
    <% end %>
  <% end %>
<% end %>
